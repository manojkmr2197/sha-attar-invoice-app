<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home_drawer_layout"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.MainActivity">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginStart="10dp">

                <TextView
                    android:id="@+id/home_nav_text_view"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/ic_baseline_menu_open_24" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="50dp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sha's Attar Invoice"
                        android:textColor="@color/app_color"
                        android:textSize="20sp" />
                </LinearLayout>


            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="3sp"
                android:orientation="vertical"
                app:cardCornerRadius="5sp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <Button
                        android:id="@+id/home_bill_add_bt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Add Bill" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <!--Billing recycler view-->
                        <FrameLayout
                            android:id="@+id/home_content_ll"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <androidx.core.widget.NestedScrollView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="vertical">

                                    <androidx.recyclerview.widget.RecyclerView
                                        android:id="@+id/home_recyclerView"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:nestedScrollingEnabled="false"
                                        android:overScrollMode="always" />

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="30sp"
                                        android:gravity="center"
                                        android:text="Billing Details"
                                        android:textSize="18sp"
                                        android:layout_marginTop="20dp"
                                        android:textStyle="bold" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10sp"
                                        app:cardCornerRadius="10sp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:padding="10sp">

                                            <!--Total product price-->
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="10sp"
                                                    android:layout_weight="0.7"
                                                    android:gravity="end"
                                                    android:text="Total Product Price "
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/app_color"
                                                    android:textSize="13sp" />

                                                <TextView
                                                    android:id="@+id/billing_total_amount_price"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="5dp"
                                                    android:layout_weight="0.3"
                                                    android:text="Rs. 40"
                                                    android:textColor="@color/app_color"
                                                    android:textStyle="bold" />


                                            </LinearLayout>

                                            <!--Discount-->
                                            <LinearLayout
                                                android:id="@+id/billing_discount_ll"
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="5sp"
                                                android:gravity="center">


                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="10sp"
                                                    android:layout_weight="0.7"
                                                    android:gravity="end"
                                                    android:text="Discount "
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/app_color"
                                                    android:textSize="13sp" />

                                                <TextView
                                                    android:id="@+id/billing_discount"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="5dp"
                                                    android:layout_weight="0.3"
                                                    android:text="5 %"
                                                    android:textColor="@color/app_color"
                                                    android:textStyle="bold" />

                                            </LinearLayout>

                                            <!--Total selling price-->
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:layout_marginTop="10sp"
                                                android:gravity="center">


                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="10sp"
                                                    android:layout_weight="0.7"
                                                    android:gravity="end"
                                                    android:text="Total Billing Price "
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/app_color"
                                                    android:textSize="13sp" />


                                                <TextView
                                                    android:id="@+id/billing_total_selling_price"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="5dp"
                                                    android:layout_weight="0.3"
                                                    android:text="Rs. 40"
                                                    android:textColor="@color/app_color"
                                                    android:textStyle="bold" />


                                            </LinearLayout>

                                        </LinearLayout>


                                    </androidx.cardview.widget.CardView>

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="30sp"
                                        android:gravity="center"
                                        android:text="Customer Information"
                                        android:textSize="18sp"
                                        android:textStyle="bold" />

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_margin="10sp"
                                        app:cardCornerRadius="10sp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:orientation="vertical"
                                            android:padding="10sp">

                                            <!--customer Phone-->
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="10sp"
                                                    android:layout_weight="0.3"
                                                    android:gravity="end"
                                                    android:text="Phone No *"
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/app_color"
                                                    android:textSize="13sp" />

                                                <EditText
                                                    android:id="@+id/billing_customer_phone"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="5dp"
                                                    android:layout_weight="0.7"
                                                    android:hint="eg. 9876543210"
                                                    android:textColor="@color/app_color"
                                                    android:textSize="13sp" />

                                                <TextView
                                                    android:layout_width="30sp"
                                                    android:layout_height="30sp"
                                                    android:id="@+id/billing_customer_search"
                                                    android:background="@drawable/baseline_person_search_24"/>

                                            </LinearLayout>


                                            <!--customer Phone-->
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="10sp"
                                                    android:layout_weight="0.3"
                                                    android:gravity="end"
                                                    android:text="Name *"
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/app_color"
                                                    android:textSize="13sp" />

                                                <EditText
                                                    android:id="@+id/billing_customer_name"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="5dp"
                                                    android:layout_weight="0.7"
                                                    android:hint="eg. Rajinikanth"
                                                    android:textColor="@color/app_color"
                                                    android:textSize="13sp" />

                                                <View
                                                    android:layout_width="30sp"
                                                    android:layout_height="30sp"/>


                                            </LinearLayout>

                                            <!--customer Phone-->
                                            <LinearLayout
                                                android:layout_width="match_parent"
                                                android:layout_height="wrap_content"
                                                android:gravity="center">

                                                <TextView
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginEnd="10sp"
                                                    android:layout_weight="0.3"
                                                    android:gravity="end"
                                                    android:text="Remarks "
                                                    android:textAllCaps="true"
                                                    android:textColor="@color/app_color"
                                                    android:textSize="13sp" />

                                                <EditText
                                                    android:id="@+id/billing_customer_remarks"
                                                    android:layout_width="0dp"
                                                    android:layout_height="wrap_content"
                                                    android:layout_marginStart="5dp"
                                                    android:layout_weight="0.7"
                                                    android:hint="eg. Frequent Customers"
                                                    android:textColor="@color/app_color"
                                                    android:textSize="13sp" />

                                                <View
                                                    android:layout_width="30sp"
                                                    android:layout_height="30sp"/>


                                            </LinearLayout>

                                        </LinearLayout>


                                    </androidx.cardview.widget.CardView>

                                    <Button
                                        android:id="@+id/billing_submit_invoice"
                                        android:layout_width="200sp"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center"
                                        android:layout_marginTop="10sp"
                                        android:gravity="center"
                                        android:text="Submit Invoice" />


                                </LinearLayout>

                            </androidx.core.widget.NestedScrollView>
                        </FrameLayout>

                        <!--Empty data-->
                        <FrameLayout
                            android:id="@+id/home_empty_ll"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text="No Bill Data found"
                                android:textColor="@color/app_color"
                                android:textSize="20sp" />

                        </FrameLayout>

                    </LinearLayout>

                </LinearLayout>


            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </FrameLayout>


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/menu_main" />
</androidx.drawerlayout.widget.DrawerLayout>